<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Test_App.MVVM.Views.ProductPage"
             Title="ProductPage">
     <StackLayout Padding="20" Spacing="15">
          <Label Text="{Binding Product.Title}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="50"/>

          <Label Text="{Binding Product.Description}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="25"/>

          <Label Text="{Binding Product.Category}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               FontSize="20"/>

          <Switch IsToggled="{Binding Product.IsPopular}" />

          <Entry Text="{Binding Product.ProductWeight}" />

          <Slider Value="{Binding Product.AvailableQTY}" Minimum="0" Maximum="50"/>

          <DatePicker Date="{Binding Product.CreateTime}" />
     </StackLayout>

</ContentPage>