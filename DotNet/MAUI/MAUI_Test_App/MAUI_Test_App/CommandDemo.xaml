<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Test_App.CommandDemo"
             Title="CommandDemo">
    <StackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
          <Button x:Name="btn" Text="Click Me" Clicked="btn_Clicked"/>
          <ImageButton Source="dotnet_bot.png"  Clicked="btn_Clicked"/>
          <RadioButton Content="First Option" CheckedChanged="RadioButton_CheckedChanged"
                     GroupName="options"/>
          <RadioButton Content="Second Option" CheckedChanged="RadioButton_CheckedChanged"
                     GroupName="options"/>
          <RadioButton Content="Third Option" CheckedChanged="RadioButton_CheckedChanged"
                     GroupName="options"/>

          <SearchBar
               x:Name="Searching"
               SearchButtonPressed="Searching_SearchButtonPressed"
               />
          <SwipeView>
               <SwipeView.RightItems>
                    <SwipeItems>
                         <SwipeItem 
                        Text="Delete" 
                        IconImageSource="appicon.png" 
                        BackgroundColor="Red" 
                        Invoked="SwipeItem_Invoked" />
                         <SwipeItem 
                        Text="Edit" 
                        IconImageSource="appiconfg.png" 
                        BackgroundColor="Orange" 
                        Invoked="SwipeItem_Invoked_1" />
                    </SwipeItems>
               </SwipeView.RightItems>

               <Grid BackgroundColor="LightGray" Padding="10">
                    <Label Text="ðŸ‘‰ Swipe me left to see actions"
                       VerticalOptions="Center"
                       HorizontalOptions="Center" />
               </Grid>
          </SwipeView>
     </StackLayout>
</ContentPage>